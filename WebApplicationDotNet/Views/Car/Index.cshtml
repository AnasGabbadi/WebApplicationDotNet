<h1>List of Cars</h1>
<a asp-action="CreateCar">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Brand and Model</td>
            <td>Manufacture Date</td>
            <td>Is Available</td>
            <td>Rental Price</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.BrandAndModel</td>
                <td>@car.ManufactureDate.ToShortDateString()</td>
                <td>@(car.IsAvailable ? "Yes" : "No")</td>
                <td>@car.RentalPrice</td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="EditCar" asp-route-id="@car.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                    <a href="javascript:void(0);" class="btn btn-outline-danger" onclick="confirmDelete(@car.Id)"><i class="bi bi-trash"></i> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script type="text/javascript">
        function confirmDelete(carId) {
            if (confirm("Are you sure you want to delete this car?")) {
                window.location.href = '@Url.Action("DeleteCar", "Car")/' + carId;
            }
        }
    </script>
}
